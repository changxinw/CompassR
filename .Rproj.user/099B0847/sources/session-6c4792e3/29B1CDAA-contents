group_df = readRDS("/Users/changxinwan/Desktop/Projects/OmicsDB/myh6_group.rds")
link_df = readRDS("/Users/changxinwan/Desktop/Projects/OmicsDB/myh6_linkage.rds")
expr_list = readRDS("/Users/changxinwan/Desktop/Projects/OmicsDB/myh6_mean_expr.rds")
gene = "Myh6"

devtools::load_all()

genome_track_map(link_df, group_df, gene, expr_list, assembly = "mm10", legend.position="left")

link_df = link_df[link_df$bio_source != "Left cerebral cortex", ]
usethis::use_data(link_df, overwrite = TRUE)

group_df = group_df[group_df$Group != "Left cerebral cortex", ]
usethis::use_data(group_df, overwrite = TRUE)

expr_list = expr_list[group_df$Sample]
usethis::use_data(expr_list, overwrite = TRUE)

genome_track_map(link_df, group_df, "Myh6", expr_list, assembly = "mm10", legend.position="left", t = -20, b = 20)
